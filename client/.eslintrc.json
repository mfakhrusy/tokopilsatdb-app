{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/prefer-stateless-function": 0,
        "arrow-parens": ["error", "always"],
        "arrow-body-style": 0,
        "import/prefer-default-export": 0,
        "react/forbid-prop-types": 0,
        "indent": ["error", 2]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpack.config.base.js"
        }
      }
    }
}